{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "description": "A list of error sections",
  "type": "object",
  "required": ["version", "sections"],
  "properties": {
    "version": {
      "type": "number",
      "enum": [1]
    },
    "sections": {"$ref": "#/definitions/sections"}
  },
  "definitions": {
    "sections": {
      "type": "object",
      "patternProperties": {
        "^[1-9]\\d$": {"$ref": "#/definitions/section"}
      },
      "propertyNames": {
        "type": "string",
        "pattern": "^[1-9]\\d$"
      }
    },
    "section": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {"type": "string"}
      },
      "additionalProperties": false
    }
  }
}
